<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SquareView">
        <attr name="horizontal" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CollectionsView">
        <attr name="id_layout_item" format="reference"/>
        <attr name="id_layout_header" format="reference"/>
        <attr name="id_layout_footer" format="reference"/>
        <attr name="id_layout_empty" format="reference"/>
        <attr name="nb_colums" format="integer"/>
        <attr name="space_divider" format="integer"/>
        <attr name="drag_n_drop_enable" format="boolean"/>
        <attr name="swipe_enable" format="boolean"/>
        <attr name="fast_scroll_enable" format="boolean"/>
        <attr name="thumb_enable_color" format="color"/>
        <attr name="thumb_disable_color" format="color"/>
        <attr name="thumb_text_color" format="color"/>
        <attr name="thumb_min_height" format="integer"/>
        <attr name="thumb_width" format="integer"/>
        <attr name="thumb_corner" format="integer"/>
        <attr name="thumb_margin_left" format="integer"/>
        <attr name="thumb_margin_right" format="integer"/>
        <attr name="thumb_margin_top" format="integer"/>
        <attr name="thumb_margin_bottom" format="integer"/>
        <attr name="thumb_text_size" format="integer"/>
        <attr name="thumb_shape" format="enum">
            <enum name="drop" value="0" />
            <enum name="circle" value="1" />
            <enum name="squircle" value="2" />
            <enum name="square" value="3" />
            <enum name="round_square" value="4" />
        </attr>
    </declare-styleable>

    <declare-styleable name="InputView">
        <attr name="box" format="enum">
            <enum name="outlined" value="0" />
            <enum name="filled" value="1" />
        </attr>
        <attr name="label" format="string"/>
        <attr name="mandatory" format="boolean"/>
        <attr name="type" format="enum">
            <enum name="text" value="0" />
            <enum name="multi_line" value="1" />
            <enum name="number" value="2" />
            <enum name="decimal" value="3" />
            <enum name="email" value="4" />
            <enum name="phone" value="5" />
            <enum name="password" value="6" />
            <enum name="pin" value="7" />
            <enum name="date" value="8" />
            <enum name="date_time" value="9" />
            <enum name="time" value="10" />
            <enum name="list" value="11" />
            <enum name="list_custom" value="12" />
            <enum name="list_multi" value="13" />
            <enum name="list_custom_multi" value="14" />
        </attr>
        <attr name="min_length" format="integer"/>
        <attr name="max_length" format="integer"/>
        <attr name="min_number" format="float"/>
        <attr name="max_number" format="float"/>
        <attr name="negative_number" format="boolean"/>
    </declare-styleable>
</resources>
